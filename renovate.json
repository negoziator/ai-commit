{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "baseBranches": [
        "master"
    ],
    "extends": [
        "config:recommended",
        ":disableRateLimiting",
        "docker:disable"
    ],
    "rangeStrategy": "update-lockfile",
    "dependencyDashboard": true,
    "major": {
        "dependencyDashboardApproval": true,
        "automerge": false,
        "commitMessageAction": "feat(deps)",
        "commitMessageTopic": "{{depName}}",
        "commitMessagePrefix": "feat(deps): ",
        "commitBody": "This is an automated update of the {{depName}} dependency to version {{newVersion}}.",
        "commitMessage": "{{{commitMessagePrefix}}}{{{commitMessageTopic}}} {{newVersion}}\n\n{{{commitBody}}}",
        "prTitle": "feat(deps): {{depName}} {{newVersion}}",
        "prBody": "This is an automated update of the {{depName}} dependency to version {{newVersion}}.\n\n{{{changelog}}}",
        "prBodyNotes": [
            "This is an automated update of the {{depName}} dependency to version {{newVersion}}.",
            "{{{changelog}}}"
        ]
    },
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "groupName": "fix(deps) all patch dependencies",
            "groupSlug": "update-patch-dependencies",
            "enabled": true,
            "automerge": true,
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "matchUpdateTypes": [
                "minor"
            ],
            "groupName": "feat(deps) all minor dependencies",
            "groupSlug": "update-minor-dependencies",
            "enabled": true,
            "automerge": true,
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "matchUpdateTypes": [
                "major"
            ],
            "groupName": "feat(deps): {{ depName }}",
            "groupSlug": "update-major-{{ depName }}",
            "enabled": true,
            "automerge": false,
            "matchPackageNames": [
                "*"
            ]
        },
        {
            "matchPackageNames": [
                "node"
            ],
            "enabled": false
        }
    ]
}
